<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WebSocket测试</title> 
    <meta name="description" content="Hi-Blogs，ASP.NET Core 正式启动。只为技术而技术！！！" />
</head>
<body>
    <div class="container body-content">
    <div>asp.net core WebSocket测试</div>
    <div id="output"></div>    
    </div>
</body>
</html>

<script language="javascript" type="text/javascript">
    var socket;
    var uri = "ws://" + window.location.host + "/ws";
    var output;
    var text = "test echo";
    function write(s) {
        var p = document.createElement("p");
        p.innerHTML = s;
        output.appendChild(p);
    }
    function doConnect() {
        socket = new WebSocket(uri);
        socket.onopen = function (e) { write("opened " + uri); doSend(); };
        socket.onclose = function (e) { write("closed"); };
        socket.onmessage = function (e) { write("Received: " + e.data); socket.close(); };
        socket.onerror = function (e) { write("Error: " + e.data); };
    }
    function doSend() {
        write("Sending: " + text);
        socket.send(text);
    }
    function onInit() {
        output = document.getElementById("output");
        doConnect();
    }
    window.onload = onInit;
    </script>


   
</script>